<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.madcourse.dharabhavsar.main">

    <!--android:icon="@mipmap/ic_launcher"-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="edu.neu.madcourse.dharabhavsar.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.neu.madcourse.dharabhavsar.scraggle.MainActivityScraggle"
            android:label="@string/wordgame_label" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.neu.madcourse.dharabhavsar.scraggle.MainActivityScraggle" />
        </activity>
        <activity
            android:name="edu.neu.madcourse.dharabhavsar.ut3.MainActivityUt3"
            android:label="@string/ut3_app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.neu.madcourse.dharabhavsar.ut3.MainActivityUt3" />
        </activity>
        <activity
            android:name="edu.neu.madcourse.dharabhavsar.ut3.GameActivity">
        </activity>
        <activity
            android:name="edu.neu.madcourse.dharabhavsar.about.MainActivityAbout"
            android:label="@string/about_app_screen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.neu.madcourse.dharabhavsar.about.MainActivityAbout" />
        </activity>
        <activity
            android:name="edu.neu.madcourse.dharabhavsar.dictionary.MainActivityDict"
            android:label="@string/dictActivityLabel"
            android:windowSoftInputMode="stateVisible|adjustResize|adjustPan"
            android:fitsSystemWindows="true">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.neu.madcourse.dharabhavsar.dictionary.MainActivityDict" />
        </activity>
        <activity
            android:name="edu.neu.madcourse.dharabhavsar.dictionary.AcknowledgementMainActivity"
            android:label="@string/ack_app_screen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.neu.madcourse.dharabhavsar.dictionary.AcknowledgementMainActivity" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

</manifest>
