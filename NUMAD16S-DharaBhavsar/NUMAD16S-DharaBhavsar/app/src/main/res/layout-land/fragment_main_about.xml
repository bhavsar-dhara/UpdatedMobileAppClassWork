<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AboutActivity"
    android:weightSum="1"
    android:showDividers="none"
    android:columnCount="2"
    android:rowCount="8"
    android:alignmentMode="alignMargins"
    android:paddingLeft="35dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"
        android:width="250dp"
        android:layout_column="0"
        android:layout_row="0" />

    <!--<View android:id="@+id/primerdivisor_5" android:layout_height="2dp" android:layout_width="match_parent" android:background="#aaaaaa" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.11"
        android:width="250dp"
        android:layout_row="0"
        android:layout_column="1" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="229dp"
        android:id="@+id/imageView"
        android:layout_gravity="left|center_vertical"
        android:layout_weight="0.85"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_rowSpan="6" />

    <!--<View android:id="@+id/primerdivisor_1" android:layout_height="2dp" android:layout_width="match_parent" android:background="#aaaaaa" />-->

    <TextView
        android:id="@+id/about_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile_size"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="top|center"
        android:textAlignment="center"
        android:layout_column="1"
        android:width="320dp"
        android:layout_row="2" />

    <TextView
        android:id="@+id/about_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile_size"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="top|center"
        android:textAlignment="center"
        android:layout_column="1"
        android:width="320dp"
        android:layout_row="3" />

    <!--<View android:id="@+id/primerdivisor_2" android:layout_height="2dp" android:layout_width="match_parent" android:background="#aaaaaa" />-->

    <!--<View android:id="@+id/primerdivisor_3" android:layout_height="2dp" android:layout_width="match_parent" android:background="#aaaaaa" />-->

    <TextView
        android:id="@+id/about_school_year"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile_size"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="top|center"
        android:textAlignment="center"
        android:layout_column="1"
        android:width="320dp"
        android:layout_row="4" />

    <TextView
        android:id="@+id/about_degree"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="0.08"
        android:layout_gravity="top|center"
        android:textAlignment="center"
        android:layout_column="1"
        android:width="320dp"
        android:layout_row="5" />

    <!--<View android:id="@+id/primerdivisor_4" android:layout_height="2dp" android:layout_width="match_parent" android:background="#aaaaaa" />-->

    <TextView
        android:id="@+id/about_imei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="top|center"
        android:textAlignment="center"
        android:layout_column="1"
        android:width="320dp"
        android:layout_row="6"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tile_size"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_column="1"
        android:width="320dp"
        android:layout_row="1" />

    <!--<View android:id="@+id/primerdivisor_6" android:layout_height="2dp" android:layout_width="match_parent" android:background="#aaaaaa" />-->

</GridLayout>