<GridLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:elevation="@dimen/elevation_low"
   android:padding="@dimen/small_board_padding"
   tools:context=".ScraggleGameActivity2"
   android:id="@+id/wgboard_small">

   <Button android:id="@+id/wgsmall1" style="@style/TileButtonScraggle"
                android:layout_column="0" android:layout_row="0"
                android:textColor="#ffffff"/>
   <Button android:id="@+id/wgsmall2" style="@style/TileButtonScraggle"
                android:layout_column="1" android:layout_row="0"
                android:textColor="#ffffff"/>
   <Button android:id="@+id/wgsmall3" style="@style/TileButtonScraggle"
                android:layout_column="2" android:layout_row="0"
                android:textColor="#ffffff"/>
   <Button android:id="@+id/wgsmall4" style="@style/TileButtonScraggle"
                android:layout_column="0" android:layout_row="1"
                android:textColor="#ffffff"/>
   <Button android:id="@+id/wgsmall5" style="@style/TileButtonScraggle"
                android:layout_column="1" android:layout_row="1"
                android:textColor="#ffffff"/>
   <Button android:id="@+id/wgsmall6" style="@style/TileButtonScraggle"
                android:layout_column="2" android:layout_row="1"
                android:textColor="#ffffff"/>
   <Button android:id="@+id/wgsmall7" style="@style/TileButtonScraggle"
                android:layout_column="0" android:layout_row="2"
                android:textColor="#ffffff"/>
   <Button android:id="@+id/wgsmall8" style="@style/TileButtonScraggle"
                android:layout_column="1" android:layout_row="2"
                android:textColor="#ffffff"/>
   <Button android:id="@+id/wgsmall9" style="@style/TileButtonScraggle"
                android:layout_column="2" android:layout_row="2"
                android:textColor="#ffffff"/>
</GridLayout>
